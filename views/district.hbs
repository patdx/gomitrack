<h1><a href="/districts">Back</a></h1>
<h1>{{nameJP}} {{name}}</h1>
<h2>Addresses</h2>
<ul>
    {{#each addresses}}
    <li style="margin-bottom:10px"><a href="district/{{../name}}">{{addressJP}}</a><br><small><b>{{zipcode}}</b> {{address}}</small><br>
                <img src="//maps.googleapis.com/maps/api/staticmap?size=300x150&markers={{zipcode}}"></li>
    {{/each}}
</ul>
<h2>Garbage Types</h2>
<ul>
    {{#each garbages}}
    <li style="margin-bottom:10px"><b>{{garbage.name}} {{frequency}}</b><br>{{nextDate}}</li>
    {{/each}}
</ul>
